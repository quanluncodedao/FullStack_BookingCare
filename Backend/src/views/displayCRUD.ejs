<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table, 
    th, 
    td {
        border:1px solid black;
        border-collapse: collapse;
        text-align: center;
      }
      .btn-edit {
        color: blue;
        background-color: greenyellow;
        height: 23px;
        width: 48px;
        margin: 10px;
        border-radius: 2px;
        cursor: pointer;
        padding: 3px;
        display: inline-block;
      }
      .btn-delete {
        color: salmon;
        background-color: paleturquoise;
        height: 23px;
        width: 68px;
        margin: 10px;
        border-radius: 2px;
        cursor: pointer;
        padding: 3px;
        display: inline-block;
      }
    
</style>
<body>
    <table style="width:100%">
        <tr>
          <th>Email</th>
          <th>Password</th>
          <th>FirstName</th>
          <th>LastName</th>
          <th>Address</th>
          <th>PhoneNumber</th>
          <th>Gender</th>
          <th>Image</th>
          <th>RoleId</th>
          <th>Actions</th>
        </tr>
        
        <% for(let i=0; i < dataTable.length; i++) { %>
            <tr>
              <td><%= dataTable[i].email %></td>
              <td><%= dataTable[i].password %></td>
              <td><%= dataTable[i].firstName %></td>
              <td><%= dataTable[i].lastName %></td>
              <td><%= dataTable[i].address %></td>
              <td><%= dataTable[i].phonenumber %></td>
              <td><%= dataTable[i].gender %></td>
              <td><%= dataTable[i].image %></td>
              <td><%= dataTable[i].roleId %></td>
              <td>
                <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn-edit" type="button">Edit</a>
                <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn-delete" type="button">Delete</a>
              </td>
            </tr>
         <% } %>
      </table>
</body>
</html>